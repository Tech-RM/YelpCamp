<% layout('../layout/html-templete')-%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campground/<%=camp.id%>?_method=put" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Name</label>
                <input class="form-control" type="text" id="title" name="title" value="<%=camp.title%>" required>
                <div class="valid-feedback"> Now it looks good!!!!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" value="<%=camp.location%>" required>
                <div class="valid-feedback"> Now it looks good!!!!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="description" id="description" cols="30" rows="4" required><%=camp.description%></textarea>
                <div class="valid-feedback"> Now it looks good!!!!</div>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="price">Price</label>
                <span class="input-group-text">â‚¹</span>
                <input class="form-control" type="number" id="price" name="price" value="<%=camp.price%>" required>
                <span class="input-group-text">.00</span>
                <div class="valid-feedback"> Now it looks good!!!!</div>
            </div>
            <div class="mb-3">
                <label for="image">Add more images</label>
                <input class="form-control" type="file" id="image" name="imageUrl" multiple>
                <div class="valid-feedback"> Now it looks good!!!!</div>
            </div>
            <div class="mb-3">
                <%camp.images.forEach((img,i)=>{%>
                    <label for="deleteImage-<%=i+1%>"><img class="showImg" src="<%=img.thumbnail%>" alt="img-<%=i+1%>"></label>
                    <input class="form-check-input customCheck" type="checkbox" name="deleteImages[]" id="deleteImage-<%=i+1%>" value="<%=img.filename%>">
                <%})%>
            </div>

            <button class="btn btn-primary mb-3">Update Camp</button>
        </form>
        <a href="/campground/<%=camp.id%>"> Go Back</a>
    </div>
</div>

